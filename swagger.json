{
  "swagger": "2.0",
  "info": {
    "title": "My CRUD Application API",
    "description": "API for a simple CRUD application",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/items": {
      "post": {
        "summary": "Create a new item",
        "description": "Adds a new item to the database",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Item object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Item"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item created"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  },
  "definitions": {
    "Item": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
}
